  cin>>i;
  while(i<=number)
  {
    sum=sum+i;
    i=i+1;
  }
  cout<<"the sum  is "<<sum;
}*/
/*(sum of all the even numbers)
#include<iostream>
using namespace std;
int main()
{
  int number,sum=0;
  cout<<"enter a number"<<endl;
  cin>>number;
  int i=2;
  while(i<=number)
  {
    sum=sum+i;
    i=i+2;
  }
  cout<<"the sum  is "<<sum;
}*/
/*(whether the number is prime or not)
#include<iostream>
using namespace std;
int main()
{
  int n;
  cout<<"enter a number"<<endl;
  cin>>n;
  int i=2;
  while(i<n){
  if(n%i==0)
  {
    cout<<"the number is not prime for  "<<i<<endl;
  }
  else
  {
   cout<<"the number is prime for "<<i<<endl;    
  }
  i=i+1;
}
}*/
/*(pattern making)
#include<iostream>
using namespace std;
int main()
{
  int r=1;
  int n;
  cout<<"n="<<endl;
  cin>>n;
  while(r<=n)
  {
    int c=1;
    while(c<=n)
    {
      cout<<"*";
      c++;
    }
    cout<<endl;
    r++;

  }

}*/


